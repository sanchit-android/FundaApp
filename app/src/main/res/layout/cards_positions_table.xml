<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="13">

        <TextView
            android:id="@+id/positions_table_symbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Fund"
            android:textColor="@color/positions_view_text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/positions_table_valuation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Valuation"
                android:textColor="@color/positions_view_text" />

            <TextView
                android:id="@+id/positions_table_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="Cost"
                android:textColor="@color/positions_view_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/positions_table_day_pnl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="Day's P&amp;L"
            android:textColor="@color/positions_view_text" />

        <TextView
            android:id="@+id/positions_table_overall_pnl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="Overall P&amp;L"
            android:textColor="@color/positions_view_text" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>