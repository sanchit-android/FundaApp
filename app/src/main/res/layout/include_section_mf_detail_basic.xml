<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="@dimen/fund_detail_section_header"
        android:textColor="@color/fund_detail_section_header"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Latest NAV"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

        <TextView
            android:id="@+id/mf_detail_nav"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="-"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Category"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

        <TextView
            android:id="@+id/mf_detail_category"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="-"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Sub Category"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

        <TextView
            android:id="@+id/mf_detail_sub_category"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="-"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Benchmark"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

        <TextView
            android:id="@+id/mf_detail_benchmark"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="-"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="AAUM"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

        <TextView
            android:id="@+id/mf_detail_aaum"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="-"
            android:textColor="@color/fund_detail_section_cat_name"
            android:textSize="@dimen/fund_detail_section_cat_name" />

    </LinearLayout>

</LinearLayout>