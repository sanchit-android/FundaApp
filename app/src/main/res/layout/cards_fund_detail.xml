<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/card_fund_detail_fund_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/card_fund_detail_fund_name"
        android:textSize="@dimen/card_fund_detail_fund_name"
        android:textStyle="bold"
        android:text="Some XYZ Fund" />

    <LinearLayout
        android:id="@+id/card_fund_detail_52hl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_fund_detail_fund_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card_fund_detail_52wlow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/card_fund_detail_nav"
            android:textSize="@dimen/card_fund_detail_nav"
            android:textStyle="normal"
            android:text="low" />

        <LinearLayout
            android:id="@+id/card_fund_detail_52hl_bar"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:background="@color/card_fund_detail_nav_bar" />

        <TextView
            android:id="@+id/card_fund_detail_52whigh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/card_fund_detail_nav"
            android:textSize="@dimen/card_fund_detail_nav"
            android:textStyle="normal"
            android:text="high" />

    </LinearLayout>

    <ImageView
        android:id="@+id/card_fund_detail_curent_nav_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_fund_detail_52hl_layout" />

    <TextView
        android:id="@+id/card_fund_detail_curent_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_fund_detail_curent_nav_arrow"
        android:layout_marginLeft="100dp"
        android:textColor="@color/card_fund_detail_nav"
        android:textSize="@dimen/card_fund_detail_nav"
        android:textStyle="normal"
        android:text="now" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_fund_detail_curent_nav"
        android:background="@color/card_fund_detail_divider" />




</androidx.constraintlayout.widget.ConstraintLayout>