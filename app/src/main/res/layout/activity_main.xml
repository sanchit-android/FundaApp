<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context=".MainActivity">

    <include layout="@layout/include_layout_home_summary_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_2"
        android:orientation="vertical"
        android:layout_marginTop="-20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Portfolio Highlights"
            android:textStyle="bold|italic"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="@dimen/home_summary_name"
            android:textColor="@color/main_card_sec_text" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_home_summary_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_home_summary_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"/>

    </LinearLayout>

    <include layout="@layout/include_layout_home_top_funds" />

</LinearLayout>