<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/card_text_view_user_detail_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:gravity="left|center_vertical"
            android:text="Id" />

        <TextView
            android:id="@+id/card_text_view_user_detail_file_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:gravity="left|center_vertical"
            android:text="Id" />

        <TextView
            android:id="@+id/card_text_view_user_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:text="Name" />

        <TextView
            android:id="@+id/card_text_view_user_detail_pan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:text="PAN" />

        <TextView
            android:id="@+id/card_text_view_user_detail_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_weight="7"
            android:gravity="left|center_vertical"
            android:text="File" />

        <Button
            android:id="@+id/card_button_user_detail_select"
            android:layout_marginHorizontal="2dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Select" />

        <Button
            android:id="@+id/card_button_user_detail_delete"
            android:layout_marginHorizontal="2dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/card_fund_detail_divider" />

</LinearLayout>